@model QuanLyBenhVienNoiTru.Models.BenhNhan

@{
    ViewData["Title"] = "Xóa bệnh nhân";
    Layout = "_Layout";
}

<div class="container-fluid">
    <h2>Xác nhận xóa bệnh nhân</h2>
    
    <div class="alert alert-danger">
        <h4><i class="fas fa-exclamation-triangle"></i> Cảnh báo!</h4>
        <p>Bạn có chắc chắn muốn xóa thông tin bệnh nhân này? Hành động này không thể hoàn tác.</p>
    </div>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Thông tin bệnh nhân</h6>
        </div>
        <div class="card-body">
            <div class="row mb-2">
                <div class="col-md-3"><strong>Mã bệnh nhân:</strong></div>
                <div class="col-md-9">@Model.MaBenhNhan</div>
            </div>
            <div class="row mb-2">
                <div class="col-md-3"><strong>Họ tên:</strong></div>
                <div class="col-md-9">@Model.HoTen</div>
            </div>
            <div class="row mb-2">
                <div class="col-md-3"><strong>Ngày sinh:</strong></div>
                <div class="col-md-9">@(Model.NgaySinh.HasValue ? Model.NgaySinh.Value.ToString("dd/MM/yyyy") : "")</div>
            </div>
            <div class="row mb-2">
                <div class="col-md-3"><strong>Giới tính:</strong></div>
                <div class="col-md-9">@Model.GioiTinh</div>
            </div>
            <div class="row mb-2">
                <div class="col-md-3"><strong>Khoa điều trị:</strong></div>
                <div class="col-md-9">@Model.Khoa.TenKhoa</div>
            </div>
            <div class="row mb-2">
                <div class="col-md-3"><strong>Ngày nhập viện:</strong></div>
                <div class="col-md-9">@Model.NgayNhapVien.ToString("dd/MM/yyyy")</div>
            </div>
            <div class="row mb-2">
                <div class="col-md-3"><strong>Ngày xuất viện:</strong></div>
                <div class="col-md-9">
                    @if (Model.NgayXuatVien.HasValue)
                    {
                        @Model.NgayXuatVien.Value.ToString("dd/MM/yyyy")
                    }
                    else
                    {
                        <span class="badge badge-primary">Đang điều trị</span>
                    }
                </div>
            </div>
            
            <form asp-action="Delete" method="post" class="mt-4">
                <input type="hidden" asp-for="MaBenhNhan" />
                <div class="form-group text-center">
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash"></i> Xác nhận xóa
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-times"></i> Hủy bỏ
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>