@model QuanLyBenhVienNoiTru.Models.BenhNhan

@{
    ViewData["Title"] = "Chi tiết bệnh nhân";
    Layout = "_Layout";
}

<div class="container-fluid">
    <h2>Chi tiết bệnh nhân</h2>

    <div class="row">
        <div class="col-md-6">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Thông tin bệnh nhân</h6>
                </div>
                <div class="card-body">
                    <div class="row mb-2">
                        <div class="col-md-4"><strong>Mã bệnh nhân:</strong></div>
                        <div class="col-md-8">@Model.MaBenhNhan</div>
                    </div>
                    <div class="row mb-2">
                        <div class="col-md-4"><strong>Họ tên:</strong></div>
                        <div class="col-md-8">@Model.HoTen</div>
                    </div>
                    <div class="row mb-2">
                        <div class="col-md-4"><strong>Ngày sinh:</strong></div>
                        <div class="col-md-8">@(Model.NgaySinh.HasValue ? Model.NgaySinh.Value.ToString("dd/MM/yyyy") : "")</div>
                    </div>
                    <div class="row mb-2">
                        <div class="col-md-4"><strong>Giới tính:</strong></div>
                        <div class="col-md-8">@Model.GioiTinh</div>
                    </div>
                    <div class="row mb-2">
                        <div class="col-md-4"><strong>Số điện thoại:</strong></div>
                        <div class="col-md-8">@Model.SoDienThoai</div>
                    </div>
                    <div class="row mb-2">
                        <div class="col-md-4"><strong>Địa chỉ:</strong></div>
                        <div class="col-md-8">@Model.DiaChi</div>
                    </div>
                    <div class="row mb-2">
                        <div class="col-md-4"><strong>Bảo hiểm y tế:</strong></div>
                        <div class="col-md-8">@(Model.BaoHiemYTe ? "Có" : "Không")</div>
                    </div>
                    <div class="row mb-2">
                        <div class="col-md-4"><strong>Khoa điều trị:</strong></div>
                        <div class="col-md-8">@Model.Khoa.TenKhoa</div>
                    </div>
                    <div class="row mb-2">
                        <div class="col-md-4"><strong>Ngày nhập viện:</strong></div>
                        <div class="col-md-8">@(Model.NgaySinh?.ToString("dd/MM/yyyy") ?? "")</div>
                    </div>
                    <div class="row mb-2">
                        <div class="col-md-4"><strong>Ngày xuất viện:</strong></div>
                        <div class="col-md-8">
                            @if (Model.NgayXuatVien.HasValue)
                            {
                                @Model.NgayXuatVien.Value.ToString("dd/MM/yyyy")
                            }
                            else
                            {
                                <span class="badge badge-primary">Đang điều trị</span>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-md-6">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Chi phí điều trị</h6>
                </div>
                <div class="card-body">
                    @if (Model.ChiPhiDieuTris != null && Model.ChiPhiDieuTris.Any())
                    {
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>Mã chi phí</th>
                                    <th>Tổng chi phí</th>
                                    <th>Ngày lập</th>
                                    <th>Trạng thái</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var chiPhi in Model.ChiPhiDieuTris)
                                {
                                    <tr>
                                        <td>@chiPhi.MaChiPhi</td>
                                        <td>@chiPhi.TongChiPhi.ToString("N0") VNĐ</td>
                                        <td>@chiPhi.NgayLap?.ToString("dd/MM/yyyy")</td>
                                        <td>
                                            @if (chiPhi.DaThanhToan)
                                            {
                                                <span class="badge badge-success">Đã thanh toán</span>
                                            }
                                            else
                                            {
                                                <span class="badge badge-warning">Chưa thanh toán</span>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <p class="text-muted">Chưa có thông tin chi phí điều trị</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Lịch sử điều trị</h6>
        </div>
        <div class="card-body">
            @if (Model.DieuTriBenhNhans != null && Model.DieuTriBenhNhans.Any())
            {
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Mã điều trị</th>
                            <th>Hình thức điều trị</th>
                            <th>Bác sĩ thực hiện</th>
                            <th>Ngày thực hiện</th>
                            <th>Kết quả</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var dieuTri in Model.DieuTriBenhNhans.OrderByDescending(d => d.NgayThucHien))
                        {
                            <tr>
                                <td>@dieuTri.MaDieuTriBenhNhan</td>
                                <td>@dieuTri.HinhThucDieuTri.TenDieuTri</td>
                                <td>@dieuTri.BacSi.HoTen</td>
                                <td>@dieuTri.NgayThucHien?.ToString("dd/MM/yyyy")</td>
                                <td>@dieuTri.KetQua</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p class="text-muted">Chưa có thông tin điều trị</p>
            }
        </div>
    </div>

    <div>
        <a asp-action="Edit" asp-route-id="@Model.MaBenhNhan" class="btn btn-warning">
            <i class="fas fa-edit"></i> Chỉnh sửa
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Quay lại danh sách
        </a>
    </div>
</div>