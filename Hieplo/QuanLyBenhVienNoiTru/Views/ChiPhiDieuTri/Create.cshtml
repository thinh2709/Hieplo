@model QuanLyBenhVienNoiTru.Models.ChiPhiDieuTri

@{
    ViewData["Title"] = "Tạo mới chi phí điều trị";
    Layout = "_Layout";
    
    var benhNhan = ViewBag.BenhNhan as QuanLyBenhVienNoiTru.Models.BenhNhan;
    var benhNhanList = ViewBag.BenhNhanList as Microsoft.AspNetCore.Mvc.Rendering.SelectList;
}

<div class="container-fluid">
    <h2 class="mt-4 mb-4">Tạo mới chi phí điều trị</h2>
    
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-edit mr-1"></i>
            Nhập thông tin chi phí điều trị
        </div>
        <div class="card-body">
            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                
                @if (benhNhan != null)
                {
                    <input type="hidden" asp-for="MaBenhNhan" value="@benhNhan.MaBenhNhan" />
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Bệnh nhân</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" value="@benhNhan.HoTen" readonly />
                        </div>
                    </div>
                }
                else
                {
                    <div class="form-group row">
                        <label asp-for="MaBenhNhan" class="col-sm-2 col-form-label">Bệnh nhân</label>
                        <div class="col-sm-10">
                            <select asp-for="MaBenhNhan" class="form-control" asp-items="benhNhanList">
                                <option value="">-- Chọn bệnh nhân --</option>
                            </select>
                            <span asp-validation-for="MaBenhNhan" class="text-danger"></span>
                        </div>
                    </div>
                }
                
                <div class="form-group row">
                    <label asp-for="TongChiPhi" class="col-sm-2 col-form-label">Tổng chi phí (VNĐ)</label>
                    <div class="col-sm-10">
                        <input asp-for="TongChiPhi" class="form-control" />
                        <span asp-validation-for="TongChiPhi" class="text-danger"></span>
                    </div>
                </div>
                
                <div class="form-group row">
                    <div class="col-sm-10 offset-sm-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i> Lưu
                        </button>
                        <a asp-action="Index" class="btn btn-secondary ml-2">
                            <i class="fas fa-arrow-left"></i> Quay lại
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}