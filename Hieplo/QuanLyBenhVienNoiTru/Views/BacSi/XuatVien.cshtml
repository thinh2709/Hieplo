@model QuanLyBenhVienNoiTru.Models.BenhNhan

@{
    ViewData["Title"] = "Xuất viện";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">Xác nhận xuất viện</h5>
            </div>
            <div class="card-body">
                <div class="alert alert-info mb-4">
                    <div class="d-flex">
                        <div class="me-3">
                            <i class="fas fa-info-circle fa-2x"></i>
                        </div>
                        <div>
                            <h5>Thông tin quan trọng</h5>
                            <p class="mb-0">Khi xác nhận xuất viện, ngày xuất viện sẽ tự động được ghi nhận là <strong>thời điểm hiện tại</strong>. Hành động này không thể hoàn tác.</p>
                        </div>
                    </div>
                </div>
                
                <div class="row mb-4">
                    <div class="col-md-6">
                        <h6 class="fw-bold">Thông tin bệnh nhân</h6>
                        <table class="table table-borderless table-sm">
                            <tr>
                                <td width="40%">Mã bệnh nhân:</td>
                                <td>@Model.MaBenhNhan</td>
                            </tr>
                            <tr>
                                <td>Họ và tên:</td>
                                <td>@Model.HoTen</td>
                            </tr>
                            <tr>
                                <td>Giới tính:</td>
                                <td>@Model.GioiTinh</td>
                            </tr>
                            <tr>
                                <td>Khoa điều trị:</td>
                                <td>@Model.Khoa?.TenKhoa</td>
                            </tr>
                        </table>
                    </div>
                    <div class="col-md-6">
                        <h6 class="fw-bold">Thông tin nhập viện</h6>
                        <table class="table table-borderless table-sm">
                            <tr>
                                <td width="40%">Ngày nhập viện:</td>
                                <td>@Model.NgayNhapVien.ToString("dd/MM/yyyy HH:mm")</td>
                            </tr>
                            <tr>
                                <td>Thời gian điều trị:</td>
                                <td>@((DateTime.Now - Model.NgayNhapVien).Days) ngày</td>
                            </tr>
                            <tr>
                                <td>Bảo hiểm y tế:</td>
                                <td>@(Model.BaoHiemYTe ? "Có" : "Không")</td>
                            </tr>
                            <tr>
                                <td>Chẩn đoán:</td>
                                <td>@Model.ChanDoan</td>
                            </tr>
                        </table>
                    </div>
                </div>
                
                <form asp-action="XuatVienConfirmed" method="post">
                    <input type="hidden" name="id" value="@Model.MaBenhNhan" />
                    <div class="d-flex justify-content-end gap-2">
                        <a href="@Url.Action("DanhSachBenhNhan")" class="btn btn-light">
                            <i class="fas fa-arrow-left me-2"></i>Quay lại
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-check-circle me-2"></i>Xác nhận xuất viện
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>