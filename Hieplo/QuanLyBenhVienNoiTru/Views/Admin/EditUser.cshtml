@model QuanLyBenhVienNoiTru.Models.TaiKhoan
@{
    ViewData["Title"] = "Chỉnh sửa người dùng";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Chỉnh sửa thông tin người dùng</h6>
        </div>
        <div class="card-body">
            <form asp-action="EditUser" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="MaTaiKhoan" />
                
                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="TenDangNhap" class="control-label">Tên đăng nhập</label>
                            <input asp-for="TenDangNhap" class="form-control" />
                            <span asp-validation-for="TenDangNhap" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="MatKhau" class="control-label">Mật khẩu</label>
                            <input asp-for="MatKhau" class="form-control" type="password" />
                            <span asp-validation-for="MatKhau" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                
                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="VaiTro" class="control-label">Vai trò</label>
                            <select asp-for="VaiTro" class="form-select">
                                <option value="Admin">Admin</option>
                                <option value="Bác sĩ">Bác sĩ</option>
                                <option value="Khách">Khách</option>
                            </select>
                            <span asp-validation-for="VaiTro" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                
                <div class="form-group mt-4">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save mr-1"></i> Lưu thay đổi
                    </button>
                    <a asp-action="ManageUsers" class="btn btn-secondary">
                        <i class="fas fa-arrow-left mr-1"></i> Quay lại
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}