@model QuanLyBenhVienNoiTru.Models.ViewModels.DangKyThamViewModel
@{
    ViewData["Title"] = "Đăng ký thăm bệnh";
    Layout = "_KhachLayout";
}

<div class="container">
    <h2>Đăng ký thăm bệnh</h2>
    <form asp-action="DangKyTham" method="post">
        <input type="hidden" asp-for="MaKhach" />
        <div class="form-group">
            <label asp-for="MaBenhNhan" class="control-label"></label>
            <select asp-for="MaBenhNhan" class="form-control">
                <option value="">-- Chọn bệnh nhân --</option>
                @foreach (var item in Model.BenhNhans)
                {
                    <option value="@item.MaBenhNhan">@item.HoTen</option>
                }
            </select>
            <span asp-validation-for="MaBenhNhan" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ThoiGianTham" class="control-label"></label>
            <input asp-for="ThoiGianTham" class="form-control" type="datetime-local" />
            <span asp-validation-for="ThoiGianTham" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Đăng ký" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}