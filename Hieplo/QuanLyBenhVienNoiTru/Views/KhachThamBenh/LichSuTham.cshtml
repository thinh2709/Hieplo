@model IEnumerable<LichThamBenh>
@{
    ViewData["Title"] = "Lịch sử thăm bệnh";
    Layout = "_KhachLayout";
}

<div class="container">
    <h2>Lịch sử thăm bệnh</h2>
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Bệnh nhân</th>
                    <th>Thời gian thăm</th>
                    <th>Trạng thái</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.BenhNhan?.HoTen</td>
                        <td>@item.ThoiGianTham?.ToString("dd/MM/yyyy HH:mm")</td>
                        <td>
                            @if (item.TrangThai == "Chờ duyệt")
                            {
                                <span class="badge badge-warning">Chờ duyệt</span>
                            }
                            else if (item.TrangThai == "Đã duyệt")
                            {
                                <span class="badge badge-success">Đã duyệt</span>
                            }
                            else
                            {
                                <span class="badge badge-danger">Hủy</span>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</div>