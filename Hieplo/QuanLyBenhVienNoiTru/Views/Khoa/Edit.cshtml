@model QuanLyBenhVienNoiTru.Models.Khoa
@{
    ViewData["Title"] = "Chỉnh sửa khoa";
    Layout = "_AdminLayout";
}

<div class="container">
    <h2>Chỉnh sửa khoa</h2>
    <div class="card">
        <div class="card-body">
            <form asp-action="Edit" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="MaKhoa" />
                
                <div class="form-group">
                    <label asp-for="TenKhoa" class="control-label">Tên khoa</label>
                    <input asp-for="TenKhoa" class="form-control" />
                    <span asp-validation-for="TenKhoa" class="text-danger"></span>
                </div>
                
                <div class="form-group">
                    <label asp-for="MoTa" class="control-label">Mô tả</label>
                    <textarea asp-for="MoTa" class="form-control" rows="4"></textarea>
                    <span asp-validation-for="MoTa" class="text-danger"></span>
                </div>
                
                <div class="form-group">
                    <input type="submit" value="Lưu" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}