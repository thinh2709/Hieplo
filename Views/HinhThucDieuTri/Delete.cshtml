@model QuanLyBenhVienNoiTru.Models.HinhThucDieuTri

@{
    ViewData["Title"] = "Xác nhận xóa hình thức điều trị";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
            <h6 class="m-0 font-weight-bold text-primary">
                <i class="fas fa-trash-alt"></i> Xác nhận xóa
            </h6>
        </div>
        <div class="card-body">
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-triangle me-2"></i> @TempData["ErrorMessage"]
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            }

            <div class="alert alert-warning" role="alert">
                <h5 class="alert-heading"><i class="fas fa-exclamation-triangle me-2"></i> Cảnh báo!</h5>
                <p>Bạn sắp xóa hình thức điều trị: <strong>@Model.TenDieuTri</strong></p>
                <hr>
                <p class="mb-0">Hành động này không thể hoàn tác. Bạn có chắc chắn muốn tiếp tục?</p>
            </div>

            <div class="table-responsive">
                <table class="table table-bordered">
                    <tr>
                        <th class="bg-light" style="width: 30%">Mã điều trị</th>
                        <td>@Model.MaDieuTri</td>
                    </tr>
                    <tr>
                        <th class="bg-light">Tên điều trị</th>
                        <td>@Model.TenDieuTri</td>
                    </tr>
                    <tr>
                        <th class="bg-light">Khoa áp dụng</th>
                        <td>@(Model.Khoa?.TenKhoa ?? "Không có")</td>
                    </tr>
                    <tr>
                        <th class="bg-light">Chi phí</th>
                        <td>@Model.ChiPhi.ToString("N0") VNĐ</td>
                    </tr>
                    <tr>
                        <th class="bg-light">Mô tả</th>
                        <td>@Model.MoTa</td>
                    </tr>
                </table>
            </div>

            <form asp-action="Delete">
                <input type="hidden" asp-for="MaDieuTri" />
                <button type="submit" class="btn btn-danger">
                    <i class="fas fa-trash"></i> Xác nhận xóa
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Quay lại danh sách
                </a>
            </form>
        </div>
    </div>
</div>