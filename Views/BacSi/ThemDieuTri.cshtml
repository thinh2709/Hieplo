@model QuanLyBenhVienNoiTru.Models.DieuTriBenhNhan

@{
    ViewData["Title"] = "Thêm điều trị";
    Layout = "_BacSiLayout";
}

<div class="container-fluid">
    <h2 class="mb-4">Thêm điều trị cho bệnh nhân</h2>
    
    <div class="row">
        <div class="col-md-8">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Thông tin điều trị</h6>
                </div>
                <div class="card-body">
                    <form asp-action="ThemDieuTri" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        
                        <input type="hidden" asp-for="MaBenhNhan" />
                        
                        <div class="form-group row">
                            <label asp-for="MaDieuTri" class="col-sm-3 col-form-label">Hình thức điều trị</label>
                            <div class="col-sm-9">
                                <select asp-for="MaDieuTri" asp-items="ViewBag.MaDieuTri" class="form-control">
                                    <option value="">-- Chọn hình thức điều trị --</option>
                                </select>
                                <span asp-validation-for="MaDieuTri" class="text-danger"></span>
                            </div>
                        </div>
                        
                        <div class="form-group row">
                            <label asp-for="MaBacSi" class="col-sm-3 col-form-label">Bác sĩ thực hiện</label>
                            <div class="col-sm-9">
                                <select asp-for="MaBacSi" asp-items="ViewBag.MaBacSi" class="form-control">
                                    <option value="">-- Chọn bác sĩ --</option>
                                </select>
                                <span asp-validation-for="MaBacSi" class="text-danger"></span>
                            </div>
                        </div>
                        
                        <div class="form-group row">
                            <label asp-for="NgayThucHien" class="col-sm-3 col-form-label">Ngày thực hiện</label>
                            <div class="col-sm-9">
                                <input asp-for="NgayThucHien" class="form-control" type="datetime-local" />
                                <span asp-validation-for="NgayThucHien" class="text-danger"></span>
                            </div>
                        </div>
                        
                        <div class="form-group row">
                            <label asp-for="KetQua" class="col-sm-3 col-form-label">Kết quả</label>
                            <div class="col-sm-9">
                                <textarea asp-for="KetQua" class="form-control" rows="3"></textarea>
                                <span asp-validation-for="KetQua" class="text-danger"></span>
                            </div>
                        </div>
                        
                        <div class="form-group row">
                            <div class="col-sm-9 offset-sm-3">
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-save"></i> Lưu
                                </button>
                                <a asp-action="Index" class="btn btn-secondary">
                                    <i class="fas fa-arrow-left"></i> Quay lại
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Lưu ý</h6>
                </div>
                <div class="card-body">
                    <p>Các hình thức điều trị sẽ được tính phí tự động vào chi phí điều trị của bệnh nhân.</p>
                    <p>Nếu bệnh nhân có bảo hiểm y tế, một số chi phí có thể được miễn giảm.</p>
                    <p>Hãy chắc chắn rằng thông tin điều trị được nhập chính xác trước khi lưu.</p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}