@model QuanLyBenhVienNoiTru.Models.ChiPhiDieuTri

@{
    ViewData["Title"] = "Cập nhật chi phí điều trị";
    Layout = "_Layout";
}

<div class="container-fluid">
    <h2 class="mt-4 mb-4">Cập nhật chi phí điều trị</h2>
    
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-edit mr-1"></i>
            Cập nhật thông tin chi phí điều trị
        </div>
        <div class="card-body">
            <form asp-action="Edit" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="MaChiPhi" />
                <input type="hidden" asp-for="MaBenhNhan" />
                <input type="hidden" asp-for="NgayLap" />
                
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Mã chi phí</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" value="@Model.MaChiPhi" disabled />
                    </div>
                </div>
                
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Bệnh nhân</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" value="@(Model.BenhNhan?.HoTen ?? "N/A")" disabled />
                    </div>
                </div>
                
                <div class="form-group row">
                    <label asp-for="TongChiPhi" class="col-sm-2 col-form-label">Tổng chi phí (VNĐ)</label>
                    <div class="col-sm-10">
                        <input asp-for="TongChiPhi" class="form-control" />
                        <span asp-validation-for="TongChiPhi" class="text-danger"></span>
                    </div>
                </div>
                
                <div class="form-group row">
                    <label asp-for="DaThanhToan" class="col-sm-2 col-form-label">Đã thanh toán</label>
                    <div class="col-sm-10">
                        <div class="form-check">
                            <input asp-for="DaThanhToan" class="form-check-input" />
                        </div>
                        <span asp-validation-for="DaThanhToan" class="text-danger"></span>
                    </div>
                </div>
                
                <div class="form-group row">
                    <div class="col-sm-10 offset-sm-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i> Lưu thay đổi
                        </button>
                        <a asp-action="Index" class="btn btn-secondary ml-2">
                            <i class="fas fa-arrow-left"></i> Quay lại
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}